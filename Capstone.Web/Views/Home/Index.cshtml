@model List<Capstone.Web.Models.Pothole>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int rowNum = 1;
}

<body>
    

    <img src="~/Content/map.png" />

    <h2>All currently confirmed potholes:</h2>

    <table class="table-index-page">

        <tr>
            <th>First Cross Street</th>
            <th>Second Cross Street</th>
            <th>Location</th>
            <th>Pothole Description</th>
        </tr>
        @foreach (var pothole in Model)
        {
            <tr>
                <td>@pothole.Street1</td>
                <td>@pothole.Street2</td>
                <td>@pothole.LocationDesc</td>
                <td>@pothole.PotholeDesc</td>
            </tr>
        }
    </table>



</body>


